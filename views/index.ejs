<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Crop Recommendation | AgriMind</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header class="navbar">
        <div class="container">
            <a href="/" class="logo"><i class="fas fa-leaf"></i> AgriMind</a>

            <button class="mobile-menu-toggle" id="mobile-menu-toggle">
                <i class="fas fa-bars"></i>
            </button>

            <ul class="nav-links" id="nav-links">
                <li><a href="/"><%= __('nav_home') %></a></li>

                <% if (isLoggedIn) { %>
                    <li id="dashboard-link"><a href="/dashboard"><%= __('nav_dashboard') %></a></li>
                    <li><a href="/feedback"><%= __('nav_feedback') %></a></li>
                <% } else { %>
                    <li id="dashboard-link" style="display:none;"><a href="/dashboard"><%= __('nav_dashboard') %></a></li>
                <% } %>

                <li><a href="/about"><%= __('nav_about') %></a></li>
                <li><a href="/analytics"><%= __('nav_analytics') %></a></li>
            </ul>

          <div class="auth-buttons">
    <% if (isLoggedIn && user) { %>
        <div class="user-nav-profile">
            <img src="<%= user.profilePhoto %>" alt="User" class="nav-avatar">
            <span class="nav-username"><%= user.name %> <i class="fas fa-caret-down"></i></span>
            
            <div class="user-dropdown-menu">
                <a href="/profile"><i class="fas fa-user-circle"></i> View Profile</a>
                <a href="/dashboard"><i class="fas fa-seedling"></i> Dashboard</a>
                <a href="/download-report"><i class="fas fa-file-pdf"></i> Download Report</a>
                <form action="/logout" method="POST" style="margin: 0;">
                    <button type="submit" style="font-family: inherit;"><i class="fas fa-sign-out-alt"></i> Logout</button>
                </form>
            </div>
        </div>
    <% } else { %>
        <a href="#" class="btn btn-secondary" id="login-btn">Log In</a>
        <a href="/signup" class="btn" id="register-btn">Sign Up</a>
    <% } %>
</div>
            
      <li class="dropdown" style="list-style: none; margin-left: 20px;">
    <a href="#" class="dropbtn">
        <i class="fas fa-globe"></i> Language
    </a>
    <div class="dropdown-content">
        <a href="/lang/en">English</a>
        <a href="/lang/hi">हिन्दी (Hindi)</a>
        <a href="/lang/kn">ಕನ್ನಡ (Kannada)</a>
    </div>
</li>
        </div>
    </header>

    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1><%= __('hero_title') %></h1>
                <p><%= __('hero_desc') %></p>
                <a href="/dashboard" class="btn btn-large" id="hero-cta-btn"><%= __('hero_cta') %></a>
            </div>
            <div class="hero-visual">
    <div class="floating-card">
        <i class="fas fa-seedling"></i>
        <h4><%= __('card_smart_title') %></h4>
        
        <p><%= __('card_smart_desc') %></p>
    </div>
    <div class="floating-card">
        <i class="fas fa-chart-line"></i>
        <h4><%= __('card_yield_title') %></h4>
        
        <p><%= __('card_yield_desc') %></p>
    </div>
</div>
        </div>
    </section>

    <section class="stats">
        <div class="container">
            <div class="stat-item">
                <i class="fas fa-users"></i>
                <h3><%= stats.farmers %>+</h3>
                <p><%= __('stat_farmers') %></p>
            </div>
            <div class="stat-item">
                <i class="fas fa-tractor"></i>
                <h3><%= stats.crops %>+</h3>
                <p><%= __('stat_crops') %></p>
            </div>
            <div class="stat-item">
                <i class="fas fa-bullseye"></i>
                <h3><%= stats.accuracy %>%</h3>
                <p><%= __('stat_accuracy') %></p>
            </div>
        </div>
    </section>

    <section class="features">
        <div class="container">
            <h2><%= __('feat_title') %></h2>
            <p class="section-subtitle"><%= __('feat_subtitle') %></p>
            <div class="features-grid">
                <a href="/dashboard" class="feature-card-link">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-brain"></i>
                        </div>
                        <h3><%= __('feat_ai_title') %></h3>
                        <p><%= __('feat_ai_desc') %></p>
                        <div class="feature-cta"><%= __('feat_ai_btn') %> <i class="fas fa-arrow-right"></i></div>
                    </div>
                </a>
                <a href="/feedback" class="feature-card-link">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-language"></i>
                        </div>
                        <h3><%= __('feat_fb_title') %></h3>
                        <p><%= __('feat_fb_desc') %></p>
                        <div class="feature-cta"><%= __('feat_fb_btn') %> <i class="fas fa-arrow-right"></i></div>
                    </div>
                </a>
                <a href="/dashboard" class="feature-card-link">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-comments"></i>
                        </div>
                        <h3><%= __('feat_chat_title') %></h3>
                        <p><%= __('feat_chat_desc') %></p>
                        <div class="feature-cta"><%= __('feat_chat_btn') %> <i class="fas fa-arrow-right"></i></div>
                    </div>
                </a>
                <a href="/about" class="feature-card-link">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3><%= __('feat_about_title') %></h3>
                        <p><%= __('feat_about_desc') %></p>
                        <div class="feature-cta"><%= __('feat_about_btn') %> <i class="fas fa-arrow-right"></i></div>
                    </div>
                </a>

                <a href="/analytics" class="feature-card-link">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-chart-pie"></i>
                        </div>
                        <h3><%= __('feat_data_title') %></h3>
                        <p><%= __('feat_data_desc') %></p>
                        <div class="feature-cta"><%= __('feat_data_btn') %> <i class="fas fa-arrow-right"></i></div>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <a href="/" class="logo"><i class="fas fa-leaf"></i> AgriMind</a>
                    <p><%= __('footer_desc') %></p>
                </div>
                <div class="footer-links">
                    <div class="footer-column">
                        <h4>Quick Links</h4>
                        <ul>
                            <li><a href="/"><%= __('nav_home') %></a></li>
                            <li><a href="/dashboard"><%= __('nav_dashboard') %></a></li>
                            <li><a href="/about"><%= __('nav_about') %></a></li>
                        </ul>
                    </div>
                    <div class="footer-column">
                        <h4>Resources</h4>
                        <ul>
                            <li><a href="/analytics"><%= __('nav_analytics') %></a></li>
                            <li><a href="/feedback"><%= __('nav_feedback') %></a></li>
                            <li><a href="#">Help Center</a></li>
                        </ul>
                    </div>
                    <div class="footer-column">
                        <h4>Contact</h4>
                        <ul>
                            <li><a href="mailto:support@agrimind.dev">support@agrimind.dev</a></li>
                            <li><a href="tel:+911234567890">+91 123 456 7890</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 AgriMind. All Rights Reserved.</p>
                <div class="social-icons">
                    <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                    <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
                </div>
            </div>
        </div>
    </footer>

   <div id="login-modal-overlay" class="login-modal-overlay hidden">
    <div class="login-modal">
        <button class="close-btn">&times;</button>
        <h2>Welcome to AgriMind</h2>
        <p>Sign in to continue to your dashboard.</p>

        <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            <div class="error-message">
                <%= errorMessage %>
            </div>
        <% } %>

        <form id="email-login-form" class="modal-form" method="POST" action="/login">
            <div class="form-group">
                <label for="modal-email">Email Address</label>
                <input type="email" id="modal-email" name="email" placeholder="you@example.com" required>
            </div>
            
            <div class="form-group">
                <label for="modal-password">Password</label>
                <div style="position: relative;">
                    <input type="password" id="modal-password" name="password" placeholder="password" required>
                    <i class="fas fa-eye toggle-password" id="toggleLoginPassword"></i>
                </div>
            </div>
            
            <button type="submit" class="btn btn-full">Continue with Email</button>
        </form>
        
        <div class="divider"></div>
        <p class="terms-notice">By continuing, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.</p>
    </div>
</div>

        </div>
    </div>

    <script src="/js/main.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const serverError = '<%= errorMessage %>';

            if (serverError && serverError !== 'null' && serverError.trim() !== '') {
                showLoginModal();
            }
        });
    </script>
</body>
</html>